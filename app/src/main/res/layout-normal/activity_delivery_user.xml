<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery_user">

    <EditText
        android:id="@+id/delivery_username"
        android:layout_width="372dp"
        android:layout_height="55dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_delivery"
        android:layout_width="372dp"
        android:layout_height="55dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_username" />

    <Button
        android:id="@+id/signup_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="67dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="sign up"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codes" />

    <EditText
        android:id="@+id/codes"
        android:layout_width="372dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:hint="entercode"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_delivery" />
</androidx.constraintlayout.widget.ConstraintLayout>