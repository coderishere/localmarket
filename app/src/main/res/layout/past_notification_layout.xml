<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/past_product"
        android:layout_width="371dp"
        android:layout_height="59dp"
        android:layout_marginBottom="550dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/past_price"
        android:layout_width="216dp"
        android:layout_height="59dp"
        android:layout_marginBottom="420dp"
        android:layout_marginEnd="178dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/past_product" />

    <TextView
        android:id="@+id/past_shopkeeper"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_marginBottom="310dp"
        android:layout_marginEnd="102dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/past_price"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/past_stock"
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="94dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/past_shopkeeper" />

    <Button
        android:id="@+id/check_avail_button"
        android:layout_width="143dp"
        android:layout_height="59dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="138dp"
        android:background="@drawable/shopkeeper_button"
        android:text="check availability"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Note"
        android:layout_width="381dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="17dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>