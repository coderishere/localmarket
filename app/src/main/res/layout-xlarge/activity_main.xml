<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signuppagelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sign_up"
        android:layout_width="164dp"
        android:layout_height="85dp"
        android:layout_marginEnd="310dp"
        android:layout_marginStart="326dp"
        android:layout_marginTop="52dp"
        android:background="@android:color/black"
        android:onClick="signupclick"
        android:text="sign up"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password1" />

    <EditText
        android:id="@+id/username1"
        android:layout_width="677dp"
        android:layout_height="89dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="677dp"
        android:layout_height="96dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_usr" />

    <EditText
        android:id="@+id/email"
        android:layout_width="686dp"
        android:layout_height="88dp"
        android:layout_marginEnd="51dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="83dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="141dp"
        android:layout_height="133dp"
        android:layout_marginEnd="352dp"
        android:layout_marginStart="307dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="166dp"
        android:layout_height="29dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="10dp"
        android:text="Already an account?"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="79dp"
        android:layout_height="28dp"
        android:layout_marginEnd="276dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up" />

    <EditText
        android:id="@+id/phone_usr"
        android:layout_width="677dp"
        android:layout_height="96dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username1" />
</androidx.constraintlayout.widget.ConstraintLayout>