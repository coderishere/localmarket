<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/replace_product"
        android:layout_width="717dp"
        android:layout_height="145dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="133dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/replace_from"
        android:layout_width="591dp"
        android:layout_height="114dp"
        android:layout_marginEnd="193dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/replace_product" />

    <TextView
        android:id="@+id/address_replace"
        android:layout_width="591dp"
        android:layout_height="115dp"
        android:layout_marginEnd="193dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="109dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/replace_from" />

    <Button
        android:id="@+id/done1"
        android:layout_width="191dp"
        android:layout_height="90dp"
        android:layout_marginBottom="360dp"
        android:layout_marginEnd="305dp"
        android:layout_marginStart="304dp"
        android:background="#151414"
        android:text="done"
        android:textColor="#F6F3F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>