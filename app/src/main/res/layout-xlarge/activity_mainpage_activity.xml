<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainpage_activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="8000dp"
            android:layout_height="500dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="320dp"
            android:scaleType="fitXY"
            android:layout_marginTop="85dp"
            app:srcCompat="@drawable/background" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="365dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="27dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="630dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="44dp"
            android:text="LOCAL MARKET"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/background"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="300dp"
            android:layout_marginEnd="350dp"
            android:scaleType="fitXY"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="483dp"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="120dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="300dp"
            android:text="Think LOCAL Get FAST"
            android:textColor="@android:color/background_light"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/background"
            app:layout_constraintEnd_toStartOf="@+id/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/search"
            android:layout_width="369dp"
            android:layout_height="53dp"
            android:layout_alignBottom="@+id/background"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="140dp"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/search_round"
            android:ems="10"
            android:gravity="left"
            android:hint="find your local products deals and more.."
            android:inputType="textPersonName"
            android:textSize="38sp"
            android:paddingLeft="50dp"
            android:paddingTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/logo2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/quicksearch"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:scaleType="fitXY"
            android:layout_marginStart="35dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/search_icon" />

        <Button
            android:id="@+id/quicksearch"
            android:layout_width="160dp"
            android:layout_height="63dp"
            android:layout_alignBottom="@+id/background"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/quickbuttonshape"
            android:fontFamily="sans-serif"
            android:text="Quick Search"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            app:layout_constraintVertical_bias="0.56" />

        <Button
            android:id="@+id/Cateogories"
            android:layout_width="160dp"
            android:layout_height="63dp"
            android:layout_alignBottom="@+id/background"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="58dp"
            android:layout_marginStart="241dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/cateogoriesshape"
            android:text="Cateogories"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light" />

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="41dp"
            android:layout_marginEnd="11dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/menuitem_icon" />

        <ViewFlipper
            android:layout_width="858dp"
            android:layout_height="491dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="590dp"
            android:id="@+id/view_flipper">

        </ViewFlipper>

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_flipper"
            android:layout_marginEnd="53dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="26dp"
            android:text="HOW LOCAL MARKET WORKS?.."
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/searchproduct"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_flipper"
            android:layout_marginStart="36dp"
            android:layout_marginTop="124dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/onlinesearch" />

        <TextView
            android:id="@+id/firstStep"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view_flipper"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="110dp"
            android:outlineProvider="none"
            android:text="Get your desire product at the e-commerce platform"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="50sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/copylink"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/firstStep"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="22dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/copylink" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_below="@+id/searchproduct"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="55dp"
            android:text="Copy the link of that product and paste it in the search box"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="50sp"
            android:id="@+id/secondStep"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/timetakings"
            android:layout_width="224dp"
            android:layout_height="220dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/secondStep"
            android:layout_marginEnd="576dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/timetaking" />

        <TextView
            android:id="@+id/thirdstep"
            android:layout_width="536dp"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/copylink"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="38dp"
            android:text="choose a cateogory and the product availability at different stores with respective prices will be available to you after few minutes"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="50sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/quicksearchimage"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/thirdstep"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="66dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/newquick" />

        <TextView
            android:id="@+id/lastStep"
            android:layout_width="485dp"
            android:layout_height="359dp"
            android:layout_below="@+id/timetakings"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="72dp"
            android:layout_toStartOf="@+id/quicksearchimage"
            android:text="Do Quick Search to instantly get result of the product(if data available) else do Cateogory search to get data"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="50sp"
            android:textStyle="italic" />


    </RelativeLayout>
</ScrollView>