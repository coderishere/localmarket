<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery_user">

    <EditText
        android:id="@+id/delivery_username"
        android:layout_width="758dp"
        android:layout_height="109dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="328dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/password_delivery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_delivery"
        android:layout_width="760dp"
        android:layout_height="129dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/codes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_username" />

    <Button
        android:id="@+id/signup_delivery"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="348dp"
        android:layout_marginStart="300dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="sign up"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/codes"
        android:layout_width="762dp"
        android:layout_height="114dp"
        android:layout_marginBottom="504dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="22dp"
        android:ems="10"
        android:hint="entercode"
        android:inputType="textPersonName"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="257dp"
        android:layout_height="214dp"
        android:layout_marginEnd="271dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>