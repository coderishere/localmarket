<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_edit">

    <EditText
        android:id="@+id/full_name"
        android:layout_width="649dp"
        android:layout_height="96dp"
        android:layout_marginBottom="78dp"
        android:layout_marginEnd="91dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="FullName"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Address_user"
        android:layout_width="643dp"
        android:layout_height="93dp"
        android:layout_marginBottom="74dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Landmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Landmark"
        android:layout_width="650dp"
        android:layout_height="95dp"
        android:layout_marginBottom="95dp"
        android:layout_marginEnd="89dp"
        android:layout_marginStart="61dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Landmark"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/save_edit_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save_edit_address"
        android:layout_width="166dp"
        android:layout_height="82dp"
        android:layout_marginBottom="286dp"
        android:layout_marginEnd="317dp"
        android:layout_marginStart="317dp"
        android:background="@drawable/shopkeeper_button"
        android:text="save"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Phone_number"
        android:layout_width="643dp"
        android:layout_height="86dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Address_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>