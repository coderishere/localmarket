<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="699dp"
        android:layout_height="150dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prices_product"
        android:layout_width="515dp"
        android:layout_height="106dp"
        android:layout_marginEnd="253dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_name" />

    <TextView
        android:id="@+id/from_shop"
        android:layout_width="515dp"
        android:layout_height="106dp"
        android:layout_marginEnd="254dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="86dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prices_product" />

    <TextView
        android:id="@+id/policy_shop"
        android:layout_width="515dp"
        android:layout_height="105dp"
        android:layout_marginEnd="252dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_shop" />

    <Button
        android:id="@+id/returned_button"
        android:layout_width="144dp"
        android:layout_height="71dp"
        android:layout_marginBottom="272dp"
        android:layout_marginStart="134dp"
        android:background="@android:color/holo_red_dark"
        android:text="return"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/replaced_button"
        android:layout_width="144dp"
        android:layout_height="71dp"
        android:layout_marginBottom="272dp"
        android:layout_marginStart="134dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:text="replace"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="144dp"
        android:layout_height="71dp"
        android:layout_marginBottom="272dp"
        android:layout_marginEnd="116dp"
        android:layout_marginStart="262dp"
        android:background="@android:color/darker_gray"
        android:text="cancel"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/returned_button" />
</androidx.constraintlayout.widget.ConstraintLayout>