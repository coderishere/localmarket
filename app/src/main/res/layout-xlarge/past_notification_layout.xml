<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/past_product"
        android:layout_width="618dp"
        android:layout_height="119dp"
        android:layout_marginEnd="157dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="126dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/past_price"
        android:layout_width="443dp"
        android:layout_height="90dp"
        android:layout_marginEnd="332dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="74dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/past_product" />

    <TextView
        android:id="@+id/past_shopkeeper"
        android:layout_width="443dp"
        android:layout_height="90dp"
        android:layout_marginEnd="332dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="77dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/past_price" />

    <TextView
        android:id="@+id/past_stock"
        android:layout_width="443dp"
        android:layout_height="90dp"
        android:layout_marginEnd="332dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/search_round"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/past_shopkeeper" />

    <Button
        android:id="@+id/check_avail_button"
        android:layout_width="247dp"
        android:layout_height="87dp"
        android:layout_marginEnd="302dp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/shopkeeper_button"
        android:text="check availability"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/past_stock" />

    <TextView
        android:id="@+id/Note"
        android:layout_width="738dp"
        android:layout_height="109dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="136dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_avail_button" />
</androidx.constraintlayout.widget.ConstraintLayout>