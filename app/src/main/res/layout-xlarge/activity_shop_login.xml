<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_shop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop_login">

    <Button
        android:id="@+id/shop_login"
        android:layout_width="188dp"
        android:layout_height="75dp"
        android:layout_marginBottom="313dp"
        android:layout_marginEnd="307dp"
        android:layout_marginStart="305dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Login"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Password_login"
        android:layout_width="674dp"
        android:layout_height="112dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="102dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_username" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="674dp"
        android:layout_height="112dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="163dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_shop" />

    <ImageView
        android:id="@+id/logo_shop"
        android:layout_width="179dp"
        android:layout_height="139dp"
        android:layout_marginEnd="323dp"
        android:layout_marginStart="298dp"
        android:layout_marginTop="177dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginBottom="425dp"
        android:layout_marginEnd="47dp"
        android:layout_marginStart="593dp"
        android:text="Forgot Password?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="181dp"
        android:layout_height="29dp"
        android:layout_marginBottom="273dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="11dp"
        android:text="create an account?"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_login" />

    <TextView
        android:id="@+id/signupText"
        android:layout_height="wrap_content"
        android:layout_marginBottom="273dp"
        android:layout_marginEnd="281dp"
        android:layout_marginTop="15dp"
        android:text="Sign up"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_login" />
</androidx.constraintlayout.widget.ConstraintLayout>