<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopkeeper_signup">

    <Button
        android:id="@+id/shop_signup"
        android:layout_width="162dp"
        android:layout_height="83dp"
        android:layout_marginEnd="291dp"
        android:layout_marginStart="347dp"
        android:layout_marginTop="59dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:onClick="onClick"
        android:text="Sign up"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Shop_code" />

    <EditText
        android:id="@+id/Shopuser"
        android:layout_width="721dp"
        android:layout_height="78dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="89dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo2" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="721dp"
        android:layout_height="78dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="PhoneNumber"
        android:inputType="textPersonName"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Shopuser" />

    <EditText
        android:id="@+id/Shop_email"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Shop_address" />

    <EditText
        android:id="@+id/Shop_password"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/Shop_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Shop_address" />

    <EditText
        android:id="@+id/Shop_code"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/edit_round"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="Code"
        android:inputType="textPersonName"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Shop_password" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="155dp"
        android:layout_height="151dp"
        android:layout_marginEnd="334dp"
        android:layout_marginStart="311dp"
        android:layout_marginTop="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="191dp"
        android:layout_height="27dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="21dp"
        android:text="already an account?"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_signup" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="287dp"
        android:layout_marginTop="23dp"
        android:text="Login"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_signup" />

    <EditText
        android:id="@+id/Shop_address"
        android:layout_width="721dp"
        android:layout_height="78dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/search_round"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Phone" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/edit_round"
        android:entries="@array/spinner_item"
        android:popupBackground="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Shop_email" />

</androidx.constraintlayout.widget.ConstraintLayout>